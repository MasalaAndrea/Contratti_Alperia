.main-header {
    background: #f4f7fb;
    padding: 0;
    height: 220px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.header-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 38px;
}
.logo { 
    width: 210px;
    height: 210px;
    object-fit: contain;
    display: block;
}
.logo-sinistra {
    margin-right: auto;
}
.logo-destra {
    margin-left: auto;
}
@media (max-width: 700px) {
    .main-header { height: 160px; }
    .logo { width: 120px; height: 120px; }
    .header-content { padding: 0 10px; }
}
.container {
    max-width: 600px;
    margin: 40px auto 0 auto;
    padding: 0 24px 24px 24px;
}
h1 {
    text-align: center;
    color: #1c3664;
    font-size: 3.2rem;
    margin-bottom: 10px;
}
.subtitle {
    text-align: center;
    color: #365fa0;
    font-size: 1.08em;
    margin-bottom: 28px;
}
.main-card, .card-centrale {
    background: #fff;
    box-shadow: 0 2px 16px rgba(0,34,85,0.09);
    border-radius: 15px;
    padding: 32px 22px 24px 22px;
    margin-bottom: 28px;
}
.section-contratto, .section-opzioni, .section-email {
    margin-bottom: 26px;
}
.section-contratto h2,
.section-opzioni h2,
.section-email h2 {
    font-size: 1.08em;
    color: #1a76d2;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
}
.vertical-radio-group label {
    display: flex;
    align-items: center;
    gap: 7px;
    margin-bottom: 12px;
    font-size: 1em;
    color: #232c3d;
}
input[type="radio"] {
    accent-color: #1a76d2;
}
.settings-icon {
    font-size: 1.15em;
    cursor: pointer;
    color: #365fa0;
    margin-left: 6px;
    transition: color 0.2s;
}
.settings-icon:hover { color: #1a76d2; }
.main-btn {
    width: 100%;
    background: #1c3664;
    color: #fff;
    font-size: 1.15em;
    border: none;
    border-radius: 7px;
    padding: 13px 0;
    margin-top: 20px;
    margin-bottom: 10px;
    cursor: pointer;
    transition: background 0.2s;
    text-align: center;
}
.main-btn:hover { background: #174d90; }
.bozze-actions {
    margin-top: 22px;
    font-size: 0.97em;
    color: #888;
    text-align: center;
}
.bozza-btn {
    margin-top: 12px;
    background: #1c3664;
    color: #fff;
    border-radius: 8px;
    font-size: 1em;
    width: 100%;
    padding: 8px 0;
    transition: background 0.2s;
    border: none;
}
.bozza-btn:hover, .bozza-btn:active, .bozza-btn:focus {
    background: #174d90;
    color: #fff;
}
.main-footer {
    text-align: center;
    font-size: 0.95em;
    color: #aaa;
    padding: 18px 0 10px 0;
    margin-top: 42px;
    border-top: 1px solid #eaeaea;
}
.main-footer a {
    color: #365fa0;
    text-decoration: none;
    margin: 0 5px;
}
.selected-options-list {
    margin-top: 5px;
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
}
.selected-option-pill {
    background: #e1ecfa;
    color: #1a76d2;
    border-radius: 13px;
    padding: 3px 13px;
    font-size: 0.97em;
    font-weight: 500;
    box-shadow: 0 2px 6px rgba(0,34,85,0.07);
    margin-bottom: 2px;
    display: inline-block;
}
.modal-overlay {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(83, 26, 26, 0.18);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
}
.modal-content {
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 4px 24px rgba(0,34,85,0.13);
    padding: 24px 18px 18px 18px;
    min-width: 260px;
    max-width: 97vw;
    width: 100%;
    max-width: 400px;
    position: relative;
    animation: modalIn 0.27s;
}
@keyframes modalIn {
    from {transform: scale(0.7); opacity:0;}
    to {transform: scale(1); opacity:1;}
}
.close-modal {
    position: absolute;
    top: 8px;
    right: 16px;
    font-size: 2.1em;
    color: #888;
    cursor: pointer;
    font-weight: bold;
    transition: color 0.2s;
}
.close-modal:hover { color: #1a76d2; }
.opzioni-group {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 18px 0 18px 0;
}
input[type="text"],
input[type="email"] {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1.08em;
    box-sizing: border-box;
    outline: none;
    transition: border-color 0.2s;
    background: #f9f9fa;
    margin-bottom: 3px;
}
input[type="text"]:focus,
input[type="email"]:focus {
    border-color: #1c3664;
    background: #fff;
}
@media (max-width: 700px) {
    .container {max-width: 98vw;}
    .main-card, .card-centrale {padding: 16px 5vw;}
    .main-header { height: 70px; }
    .logo { height: 48px; margin-left: 12px; }
}
@media (max-width: 500px) {
    h1 { font-size: 1.35em !important; }
    .main-card, .card-centrale {padding: 7px 2vw;}
    .main-footer { font-size: 0.82em; }
}
.card-centrale {
    max-width: 540px;
    width: 96vw;
    margin: 32px auto;
    background: #fff;
    box-shadow: 0 4px 32px rgba(0,34,85,0.10);
    border-radius: 15px;
    padding: 30px 24px 22px 24px;
    display: flex;
    flex-direction: column;
    gap: 18px;
}
.titolo-contratto {
    text-align: center;
    color: #1c3664;
    font-size: 2.7rem;
    font-weight: 700;
    margin-bottom: 14px;
}
.sottotitolo {
    text-align: center;
    font-size: 1.25em;
    color: #274678;
    margin-bottom: 6px;
    font-weight: 500;
}
.form-group-doppio {
    display: flex;
    gap: 18px;
    align-items: flex-start;
}
.form-group-doppio .form-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.form-group {
    margin-bottom: 18px;
    display: flex;
    flex-direction: column;
}
.form-group label {
    font-weight: 500;
    color: #1c3664;
    margin-bottom: 4px;
    line-height: 1.3;
    min-height: 22px;
}
.form-group input,
.form-group select {
    padding: 8px 10px;
    border: 1px solid #c1d0e4;
    border-radius: 6px;
    background: #f8f9fa;
    font-size: 1em;
    transition: border-color 0.18s;
    height: 40px;
    box-sizing: border-box;
    margin-bottom: 0 !important;
}
.form-group input:focus,
.form-group select:focus {
    border-color: #1a76d2;
    background: #fff;
}
@media (max-width: 700px) {
    .card-centrale {
        max-width: 99vw;
        padding: 18px 5vw;
    }
    .titolo-contratto { font-size: 1.55em; }
    .form-group-doppio {
        flex-direction: column;
        gap: 8px;
    }
}
.pod-input-group {
    display: flex;
    align-items: center;
    gap: 8px;
    min-height: 40px;
}
.pod-prefix {
    font-weight: bold;
    font-size: 1.08em;
    min-width: 25px;
    text-align: center;
    margin-bottom: 0;
}
.pod-small {
    width: 56px;
    min-width: 48px;
    max-width: 55px;
    padding: 6px 8px;
    font-size: 1em;
    border-radius: 5px;
    text-align: left;
    height: 40px;
}
.pod-large {
    width: 120px;
    min-width: 120px;
    max-width: 150px;
    padding: 6px 8px;
    font-size: 1em;
    border-radius: 5px;
    text-align: left;
    height: 40px;
}
@media (max-width: 700px) {
    .pod-input-group { flex-direction: column; gap: 2px; align-items: flex-start; }
    .pod-small, .pod-large { width: 98vw; min-width: 60px; max-width: 100vw; }
}
/* Radio row per Switch/Subentro/Voltura/Nuova Attivazione */
.radio-row {
    display: flex;
    gap: 16px;
    align-items: center;
    margin-bottom: 22px;
    flex-wrap: wrap;
}
.radio-row .checkbox-inline {
    display: flex;
    align-items: center;
    gap: 2px;
    margin-bottom: 0;
    white-space: nowrap;
    font-size: 1.08em;
    line-height: 1.2;
}
.radio-row input[type="radio"] {
    vertical-align: middle;
    margin-right: 4px;
}
@media (max-width: 700px) {
  .radio-row,
  .riscaldamento-row,
  .domestico-row {
    flex-direction: column;
    gap: 18px;
    align-items: flex-start;
  }
}
/* Domestico row energia */
.domestico-row {
    display: flex;
    flex-direction: column;
    gap: 0px;
    align-items: flex-start;
    margin-bottom: 32px;
}
.domestico-row .checkbox-inline {
     display: flex;
    align-items: center;
    gap: 2px;
    margin-bottom: 0;
    white-space: nowrap;
    font-size: 1.08em;
    line-height: 1.2;
}
/* Riscaldamento row gas */
.riscaldamento-row {
    display: flex;
    flex-direction: column;
    gap: 0px;
    align-items: flex-start;
    margin-bottom: 32px;
}
.riscaldamento-row .checkbox-inline {
    display: flex;
    align-items: center;
    gap: 2px;
    margin-bottom: 0;
    white-space: nowrap;
    font-size: 1.08em;
    line-height: 1.2;
}
/* Campo select pi√π lungo e visibile */
.select-full {
    width: 100%;
    min-width: 320px;
    max-width: 480px;
    padding: 10px 14px;
    border-radius: 5px;
    font-size: 1.09em;
    border: 1px solid #c1d0e4;
    box-sizing: border-box;
    background: #f8f9fa;
    margin-bottom: 0 !important;
}
.form-group .select-full {
    margin-top: 6px;
    margin-bottom: 14px;
}

/* --- PAGINA 3: PAGAMENTO & CONSENSI --- */
.form-section {
    background: #f8fbff;
    border: 2px solid #d2e5f7;
    border-radius: 16px;
    padding: 16px 32px;
    margin-bottom: 22px;
    max-width: 600px;
}

.form-section h3 {
    font-size: 1.4em;
    margin-bottom: 12px;
    font-weight: bold;
    color: #234567;
}

/* Gruppi di opzioni in colonna con testo accanto */
.checkbox-group, .radio-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
}

/* Ogni opzione riga: radio/checkbox + testo di fianco */
.checkbox-group label,
.radio-group label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1.07em;
    cursor: pointer;
    width: 100%;
}

/* Input piccolo e allineato */
.checkbox-group input[type="checkbox"],
.radio-group input[type="radio"] {
    accent-color: #234567;
    width: 16px;
    height: 16px;
    min-width: 16px;
    min-height: 16px;
    margin-right: 0;
}

/* Per il gruppo Dichiarazioni: in colonna anche se sono radio */
.dichiarazioni-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
}

/* Responsive: mantiene tutto in colonna, testo accanto al radio/checkbox */
@media (max-width: 700px) {
    .form-section {
        max-width: 98vw;
        padding: 12px 8px;
    }
    .checkbox-group, .radio-group, .dichiarazioni-group {
        gap: 18px;
        align-items: flex-start;
    }
    .form-section h3 {
        font-size: 1em;
    }
}
